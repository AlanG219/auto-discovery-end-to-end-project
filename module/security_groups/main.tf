  name        = var.rds
  description = "rds Security Group"
  vpc_id      = var.vpc-id

  # Inbound Rules
  ingress {
    description     = "rds port"
    from_port       = 3306
    to_port         = 3306
    protocol        = "tcp"
    security_groups = [aws_security_group.bastion-sg.id, aws_security_group.asg-sg.id]
  }
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
  tags = {
    Name = var.rds
  }
}


